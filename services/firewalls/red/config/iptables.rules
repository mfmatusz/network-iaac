*filter
:INPUT DROP [0:0]
:FORWARD DROP [0:0]
:OUTPUT ACCEPT [0:0]

# Reguły z tabeli 9
-A FORWARD -s 10.2.1.0/24 -d 10.4.0.0/24 -p tcp --dport 22 -j ACCEPT  # SSH administracyjny
-A FORWARD -s 10.4.0.0/24 -d 10.2.1.0/24 -p udp --dport 514 -j ACCEPT  # Syslog
-A FORWARD -s 10.4.0.0/24 -d 10.1.0.0/24 -p udp -m multiport --dports 53,514 -j ACCEPT  # DNS
-A FORWARD -d 10.4.0.0/24 -j DROP  # Pozostały ruch

# Logowanie
-A FORWARD -j LOG --log-prefix "RED_FW_DROP: "

COMMIT